<%- include('../Includes/begin.ejs') %>
    <%- include('../Includes/staff_nav.ejs') %>

        <section id="content-wrapper">
            <main role="main" class="pt-5 main">
                <div class="header pb-4 pb-sm-8 pt-5 pt-lg-4 d-flex align-items-center"
                    style="max-height: 100px; background-size: cover; background-position: center top;">
                    <h1>Hello <%= user.st_name %> !
                    </h1>
                </div>

                <hr>

                <div class="row">
                    <div class="col-sm-4">
                        <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <img height="250" class="card-img-top"
                                src="https://img.freepik.com/free-vector/businessman-planning-events-deadlines-agenda_74855-6274.jpg?w=740&t=st=1664392606~exp=1664393206~hmac=91285e1276d73d6f9f2c70cbc6bbb8a2b3529ac7701c281a2b36599ae4349931"
                                alt="image">
                            <div class="card-body">
                                <h5 class="card-title">Mark Attendance</h5>
                                <p class="card-text">Record Daily Attendace of your students here! You cannot edit/update
                                    the records after one month.
                                </p>
                            </div>
                            <div class="card-footer">
                                <div class="btn-wrapper text-center d-flex justify-content-between"
                                    style="color: #fff;">
                                    <a href="/admin/addStaff" style="background-color: rgb(0, 153, 255);"class="btn btn-success">Mark Attendance</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <img height="250" class="card-img-top"
                                src="https://img.freepik.com/free-vector/time-management-concept-landing-page_52683-18605.jpg?w=740&t=st=1664392771~exp=1664393371~hmac=86789ad371f995c41f6b0050e12ac1a3fb44e3789c5abbf59b2cc4e4bbcf9f3d"
                                alt="image">
                            <div class="card-body">
                                <h5 class="card-title">Student Report</h5>
                                <p class="card-text">Manage your student's report here (marks). All
                                    your
                                    changes will be reflected to them as well.
                                </p>

                            </div>
                            <div class="card-footer">
                                <div class="btn-wrapper text-center d-flex justify-content-between"
                                    style="color: #fff;">
                                    <a style="background-color: rgb(0, 153, 255);" href="/admin/addStaff" class="btn btn-primary">Student Report</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                            <img height="250" class="card-img-top"
                                src="https://itslearning.com/uk/wp-content/uploads/sites/19/slider58/reports.png">
                            <div class="card-body">
                                <h5 class="card-title">Generate Class Report</h5>
                                <p class="card-text">See how well your class is performing! Generate the overall class report (Attendace/Marks) here.
                                </p>

                            </div>
                            <div class="card-footer">
                                <div class="btn-wrapper text-center d-flex justify-content-between"
                                    style="color: #fff;">
                                    <a style="background-color: rgb(0, 153, 255);" href="/admin/addStaff" class="btn btn-danger">Class Report</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
        </section>

        <%- include('../Includes/staff_end.ejs') %>